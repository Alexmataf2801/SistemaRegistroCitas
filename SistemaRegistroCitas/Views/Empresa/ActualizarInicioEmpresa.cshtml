
@{
    ViewBag.Title = "ActualizarInicioEmpresa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container" style="margin: 0 auto; width: 90%">
        <div class="panel panel-default" style="margin-top: 20px">
            <div class="panel-body">
                <div style="margin: 0 auto; width: 95%">
                    <div style="text-align: center; margin-bottom: 50px">
                        <h3 id="lblTitulo" style="text-align:center" class="box-header">Actualizar Inicio Empresa</h3>
                        <hr />
                    </div>
                    <div class="form-group row">
                        <label>Nombre de la Empresa</label>
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNombreEmpresa" maxlength="150" />
                    </div>

                    <div class="form-group row">
                        <label>Descripcion</label>
                        <textarea type="text" class="form-control" rows="6" style="border-radius:4px; max-height: 400px; min-height: 200px; max-width: 100%;min-width: 100%;" autocomplete="off"  id="txtDescripcionEmpresa" maxlength="500"></textarea>
                    </div>

                    <div class="form-group row">
                        <label>Direccion</label>
                        <textarea type="text" class="form-control" rows="6" style="border-radius:4px ;max-height: 400px; min-height: 200px; max-width: 100%;min-width: 100%;" autocomplete="off" id="txtDireccionEmpresa" maxlength="500"></textarea>
                    </div>

                    <div class="form-group row">
                        <label>Contacto</label>
                        <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtContactoEmpresa" maxlength="100" />
                    </div>


                    <div style="text-align: center; margin-bottom: 20px">
                        <div class="col-md-12">
                            <div class="row" style="margin: 15px">
                                <a class="btn btn-success" style="margin: 0 auto" onclick="ActualizarInicioEmpresa()">Guardar</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Propios/ActualizarInicioEmpresa.js"></script>
