<div class="container" style="margin: 0 auto; width: 95%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div class="row">
                <div style="text-align:center" class="form-group col-md-12">
                    <h3 id="lblTitulo" style="text-align:center" class="box-header">Insertar Servicio</h3>
                    <hr />
                </div>

            </div>
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: auto">
                    <div class="body">
                        <div class="form-group">
                            <input type="text" required class="form-control " id="txtServicio" placeholder="Nombre del Servicio" name="Servicio" maxlength="150">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control " id="txtDescripcion" placeholder="Descripcion" name="Descripcion" style="max-height: 300px; min-height: 80px; max-width: 100%;min-width: 100%;" maxlength="500"></textarea>

                        </div>

                        <div class="form-group">
                            <select required class="form-control" id="TipoUnidad">
                                <option value="0" disabled selected hidden>Tipo de Unidad</option>
                                <option value="1">Minutos</option>
                                <option value="2">Horas</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select required class="form-control" onfocus='this.size=5;' onblur='this.size=1;' onchange='this.size=1; this.blur();' id="txtTiempoEstimado">
                                <option value="0" disabled selected hidden>Duracion del Servicio</option>
                            </select>
                        </div>

                    </div>
                    <div class="footer">
                        <button class="btn btn-primary" onclick="InsertarDatosServicios();return false">Guardar</button>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Js/jquery.min.js"></script>
@*<script src="~/Scripts/Propios/Servicio.js"></script>*@
@Scripts.Render("~/bundles/Servicio")