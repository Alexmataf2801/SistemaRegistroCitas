
@{
    ViewBag.Title = "ActualizarServicios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Estilos/bootstrap")

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" style="text-align:center" class="box-header">Actualizacion de Servicios</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Nombre del Servicio</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNombre" maxlength="150" />
                </div>

                <div class="form-group row">
                    <label>Descripcion</label>
                    <textarea type="text" class="form-control" rows="6" style="border-radius:4px" autocomplete="off" id="txtDescripcionServicio" maxlength="150"></textarea>
                </div>             

                <div class="form-group row">
                    <label>Tipo de Unidad</label>
                    <select class="form-control" style="border-radius:4px" id="txtTipoUnidadServicio"></select>

                </div>

                <div class="form-group row">
                    <label>Duracion del Servicio</label>
                    <select class="form-control" onfocus='this.size=5;' onblur='this.size=1;' onchange='this.size=1; this.blur();' style="border-radius:4px" id="txtTiempoEstimadoServicio"></select>
                    @*<input type="text" class="form-control" rows="6" style="border-radius:4px" autocomplete="off" id="txtTiempoEstimadoServicio" maxlength="150" />*@
                </div>

                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a class="btn btn-success" style="margin:0 auto" onclick="ActualizarDatosServicios()">Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoActServicio">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoActServicio" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarServicios()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->

<script src="~/Js/jquery.min.js"></script>
<script src="~/Scripts/Propios/ActualizarDatosServicios.js"></script>