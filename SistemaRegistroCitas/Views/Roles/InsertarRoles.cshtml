
@{
    ViewBag.Title = "InsertarRol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Estilos/bootstrap")


<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" style="text-align:center" class="box-header">Insertar Rol</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" id="txtNombre" maxlength="150" />
                </div>

                <div class="form-group row">
                    <label>Descripcion</label>
                    <textarea type="text" class="form-control" rows="6" style="border-radius:4px" autocomplete="off" id="txtDescripcionRol" maxlength="150"></textarea>
                </div>
                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a class="btn btn-success" style="margin:0 auto" >Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Js/jquery.min.js"></script>
