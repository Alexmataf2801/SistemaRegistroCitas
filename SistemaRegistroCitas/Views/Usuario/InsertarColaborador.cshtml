@{
    ViewBag.Title = "InsertarColaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Estilos/bootstrap") 

<div class="container" style="margin: 0 auto; width: 95%; height:auto">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="text-align: center;">
                <h3 class="box-header">Insertar Empleado</h3>
                <hr />
            </div>
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; ">

                    <div class="body">

                        <div class="form-group">
                            <input type="text" required class="form-control" id="txtIdentificacion" placeholder="Identificación" name="Identificación">
                        </div>
                        <div class="form-group">
                            <input type="text" required class="form-control" id="txtNombre" placeholder="Nombre" name="Nombre">
                        </div>
                        <div class="form-group">
                            <input type="text" required class="form-control" id="txtPrimerApellido" placeholder="Primer Apellido" name="Primer Apellido">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="txtSegundoApellido" placeholder="Segundo Apellido" name="Segundo Apellido">
                        </div>
                        <div class="form-group">
                            <input type="email" required class="form-control" id="txtCorreoElectronico" placeholder="Correo Electrónico" name="Correo electronico">
                        </div>
                        <div class="form-group">
                            <input type="tel" required class="form-control" id="txtTelefono" placeholder="Telefono" name="Telefono">
                        </div>
                        <div class="form-group">
                            <select class="form-control" id="ddlGenero">
                                <option value="0">Masculino</option>
                                <option value="1">Femenino</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <select class="form-control" id="IdRol">
                                <option value="2">Secretaria</option>
                                <option value="3">Colaborador</option>
                            </select>
                        </div>


                    </div>

                    <div class="footer">
                        <button class="btn btn-primary" onclick="InsertarDatosColaborador()">Guardar</button>

                    </div>



                </div>

            </div>
        </div>
    </div>
</div>
<script src="~/Js/jquery.min.js"></script>
<script src="~/Scripts/Propios/Colaboradores.js"></script>



