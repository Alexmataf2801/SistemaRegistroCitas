@{
    ViewBag.Title = "InsertarColaborador";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Estilos/bootstrap")


    <div class="container" style="margin: 0 auto; width: 90%">
        <div class="panel panel-default" style="margin-top: 20px">
            <div class="panel-body">
                <div style="margin: 0 auto; width: 95%">
                    <div style="text-align: center; margin-bottom: 50px">
                        <h3 id="lblTitulo" style="text-align:center" class="box-header">Insertar Colaborador</h3>
                        <hr />
                    </div>


                    <div class="form-group">
                        <input type="text" required class="form-control" id="txtIdentificacion" placeholder="Identificación" name="Identificación" maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="text" required class="form-control" id="txtNombre" placeholder="Nombre" name="Nombre" maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="text" required class="form-control" id="txtPrimerApellido" placeholder="Primer Apellido" name="Primer Apellido" maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="txtSegundoApellido" placeholder="Segundo Apellido" name="Segundo Apellido" maxlength="50">
                    </div>
                    <div class="form-group">
                        <input type="email" required class="form-control" id="txtCorreoElectronico" placeholder="Correo Electrónico" name="Correo electronico" maxlength="150">
                    </div>
                    <div class="form-group">
                        <input type="tel" required class="form-control" id="txtTelefono" placeholder="Telefono" name="Telefono" maxlength="150">
                    </div>
                    <div class="form-group">
                        <select class="form-control" id="ddlGenero">
                            <option value="0">Masculino</option>
                            <option value="1">Femenino</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <select required class="form-control" id="IdRol"></select>
                    </div>



                    <div style="text-align: center; margin-bottom: 20px">
                        <div class="col-md-12">
                            <div class="row" style="margin: 15px">
                                <button class="btn btn-primary" onclick="InsertarDatosColaborador();return false">Guardar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<script src="~/Js/jquery.min.js"></script>
<script src="~/Js/bootstrap.min.js"></script>
<script src="~/Scripts/Propios/Colaboradores.js"></script>




