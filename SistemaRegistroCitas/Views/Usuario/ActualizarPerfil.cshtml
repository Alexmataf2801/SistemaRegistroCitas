@model Entidades.ClasesEntidades.Usuario
@{
    ViewBag.Title = "ActualizarPerfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin: 0 auto; width: 90%">
    <div class="panel panel-default" style="margin-top: 20px">
        <div class="panel-body">
            <div style="margin: 0 auto; width: 95%">
                <div style="text-align: center; margin-bottom: 50px">
                    <h3 id="lblTitulo" style="text-align:center" class="box-header">Actualizar Perfil</h3>
                    <hr />
                </div>
                <div class="form-group row">
                    <label>Identificacion</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" value="@Model.Identificacion" id="txtIdentificacionPerfil" maxlength="50" />

                </div>

                <div class="form-group row">
                    <label>Nombre</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" value="@Model.Nombre" id="txtNombrePerfil" maxlength="50" />
                </div>

                <div class="form-group row">
                    <label>Primer Apellido</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" value="@Model.PrimerApellido" id="txtPrimerApellidoPerfil" maxlength="50">
                </div>

                <div class="form-group row">
                    <label>Segundo Apellido</label>
                    <input type="text" class="form-control" style="border-radius:4px" autocomplete="off" value="@Model.SegundoApellido" id="txtSegundoApellidoPerfil" maxlength="50">
                </div>

                <div class="form-group row">
                    <label>Correo Electronico</label>
                    <input type="email" required class="form-control" style="border-radius:4px" autocomplete="off" value="@Model.CorreoElectronico" id="txtCorreoElectronicoPerfil" maxlength="150">
                    <p id="MensajeCorreoCorrecto"</p>
                </div>

                <div class="form-group row">
                    <label>Telefono</label>
                    <input type="tel" onkeyup="limpiarNumero(this)" onchange="limpiarNumero(this)" class="form-control" style="border-radius:4px" autocomplete="off" value="@Model.Telefono" id="txtTelefonoPerfil" maxlength="8">
                </div>

                <div class="form-group row">
                    <label>Genero</label>
                    <select class="form-control" id="ddlGenero">
                        <option value="0">Masculino</option>
                        <option value="1">Femenino</option>
                    </select>
                </div>


                <div style="text-align: center; margin-bottom: 20px">
                    <div class="col-md-12">
                        <div class="row" style="margin: 15px">
                            <a class="btn btn-success" style="margin:0 auto" onclick="ActualizarPerfil()">Guardar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!--INICIO MODAL CORRECTO-->
<div class="modal fade" tabindex="-1" role="dialog" id="ModalCorrectoActPerfil">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#5CB85C;">
                <h5 style="color:#ffffff;text-align:center" class="modal-title">Información</h5>
            </div>
            <div class="modal-body">
                <p id="msjCorrectoActPerfil" style="text-align:center"></p>
            </div>
            <div class="modal-footer">
                <a type="button" style="margin:0 auto" onclick="RedireccionarPerfil()" class="btn btn-success" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
<!--FIN MODAL CORRECTO-->

<script type="text/javascript">

    function limpiarNumero(obj) {
        /* El evento "change" sólo saltará si son diferentes */
        obj.value = obj.value.replace(/\D/g, '');
    }
</script>

<script src="~/Js/jquery.min.js"></script>
